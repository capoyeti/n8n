    {
      "id": "filter-followups",
      "name": "Filter Due Follow-ups",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        440,
        0
      ],
      "parameters": {
        "jsCode": "// Filter leads that need follow-up\n// Criteria:\n// - campaign_status = 'sent' (have been contacted but not responded)\n// - sequence_step < 3 (haven't completed all follow-ups)\n// - next_followup_due <= now\n// - needs_human = FALSE (not flagged for manual handling)\n\nconst now = new Date();\nconst leads = $input.all();\nconst dueLeads = [];\n\nfor (const item of leads) {\n  const lead = item.json;\n  \n  // Skip if not in 'sent' status\n  if (lead.campaign_status !== 'sent') continue;\n  \n  // Skip if already completed all follow-ups\n  const step = parseInt(lead.sequence_step) || 0;\n  if (step >= 3) continue;\n  \n  // Skip if needs human intervention\n  if (lead.needs_human === 'TRUE' || lead.needs_human === true) continue;\n  \n  // Check if follow-up is due\n  if (lead.next_followup_due) {\n    const dueDate = new Date(lead.next_followup_due);\n    if (dueDate > now) continue; // Not due yet\n  } else {\n    // If no due date set, check last_message_sent + 3 days\n    if (lead.last_message_sent) {\n      const lastSent = new Date(lead.last_message_sent);\n      const daysSince = (now - lastSent) / (1000 * 60 * 60 * 24);\n      if (daysSince < 3) continue; // Wait at least 3 days\n    }\n  }\n  \n  dueLeads.push({\n    json: {\n      ...lead,\n      next_step: step + 1\n    }\n  });\n}\n\n// Limit to 50 per day to avoid WhatsApp rate limits\nreturn dueLeads.slice(0, 50);"
      }
    },
