    {
      "id": "merge-template",
      "name": "Merge Lead with Template",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1320,
        0
      ],
      "parameters": {
        "jsCode": "// Get lead data and find matching template\nconst lead = $('Process in Batches').item.json;\nconst templates = $('Get Templates').all();\n\n// Find template for next step\nconst nextStep = lead.next_step || 2; // Default to step 2 if not set\nconst template = templates.find(t => parseInt(t.json.step) === nextStep);\n\nif (!template) {\n  return [{ json: { error: 'No template found for step ' + nextStep, lead } }];\n}\n\n// Replace placeholders in template\nlet message = template.json.message || '';\nmessage = message.replace(/\\{\\{first_name\\}\\}/g, lead.first_name || 'there');\nmessage = message.replace(/\\{\\{business_name\\}\\}/g, lead.business_name || '');\nmessage = message.replace(/\\{\\{city\\}\\}/g, lead.city || '');\n\nreturn [{\n  json: {\n    lead_id: lead.id,\n    phone: lead.phone_normalized,\n    email: lead.email,\n    first_name: lead.first_name,\n    business_name: lead.business_name,\n    message: message,\n    sequence_step: nextStep,\n    template_name: template.json.name\n  }\n}];"
      }
    },
